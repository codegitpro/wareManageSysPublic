.scan {
  padding: 20rpx;
  display: flex;
  align-items: center;
}
.order {
  padding: 0 20rpx 0 20rpx;
  display: flex;
  align-items: flex-end;
  font-size: 30rpx;
  color: #515151;
}
.order .label {
  margin-right: 40rpx;
  width: 165rpx;
  border-bottom: 1px solid #515151;
}
.detail {
  padding: 20rpx;
}
.detail .detail-item {
  padding: 10rpx;
  display: flex;
  position: relative;
  border-radius: 1%;
}
.detail .detail-item .right {
  font-size: 26rpx;
}
.detail .detail-item .right .unit {
  padding-left: 80rpx;
}
.detail .detail-item .tag {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}
.detail .active {
  background-color: #e6e6e6;
}
.slot-content {
  width: 520rpx;
}
.slot-content .content-line {
  display: flex;
  align-items: flex-end;
}
.slot-content .content-line .content-line-label {
  display: flex;
  justify-content: flex-end;
  width: 180rpx;
}
.slot-content .quantity {
  margin-top: 10rpx;
  align-items: center;
}

