.banner {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 10rpx 30rpx;
  background-color: white;
}
.menu .grid-text {
  font-size: 14px;
  color: #909399;
  padding: 10rpx 0 20rpx 0rpx;
  box-sizing: border-box;
}
.info .info-area {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}
.info .info-area .info-item {
  margin: 0px 15rpx 0 15rpx;
  padding: 15rpx 40rpx 15rpx 40rpx;
  border-radius: 12rpx;
  box-shadow: 0 0 20rpx 2rpx rgba(0, 0, 0, 0.1);
}
.info .info-area .info-item .title {
  font-size: 26rpx;
}
.info .info-area .info-item .num {
  display: flex;
  justify-content: center;
  color: #3c9cff;
  margin-top: 10rpx;
}
.info .info-area .info-item .return {
  color: #f56c6c;
}

